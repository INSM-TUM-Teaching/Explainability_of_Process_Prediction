{
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": { "serviceId": "ppm-backend", "region": "europe-west1" }
      },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
